{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "files": ["./hardhat.config.ts", "./deployments.ts", "./types/index.ts"],
  "include": ["contracts/**/*", "tasks/**/*", "test/**/*", "deploy/**/*", "types/", "deployments.ts"]
}
